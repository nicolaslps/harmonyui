{
  "name": "@harmonyui/primitives",
  "version": "0.0.1",
  "description": "Headless web components",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": {
      "import": "./dist/button.js",
      "require": "./dist/button.js",
      "types": "./dist/button.d.ts"
    },
    "./dialog": {
      "import": "./dist/dialog.js",
      "require": "./dist/dialog.js",
      "types": "./dist/dialog.d.ts"
    },
    "./tabs": {
      "import": "./dist/tabs.js",
      "require": "./dist/tabs.js",
      "types": "./dist/tabs.d.ts"
    },
    "./combobox": {
      "import": "./dist/combobox.js",
      "require": "./dist/combobox.js",
      "types": "./dist/combobox.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc && rollup -c",
    "build:watch": "tsc --watch",
    "dev": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "serve": "web-dev-server --node-resolve --open --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --write src"
  },
  "keywords": [
    "web-components",
    "lit",
    "headless",
    "ui",
    "components",
    "accessibility"
  ],
  "author": "Nicolas Lopes",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/dom": "^9.0.0",
    "@web/dev-server": "^0.4.0",
    "concurrently": "^8.0.0",
    "jsdom": "^23.0.0",
    "rollup": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}