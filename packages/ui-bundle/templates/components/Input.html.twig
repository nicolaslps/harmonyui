{%- props type = 'text', size = 'md' -%}

{%- set styleProps = getStyleProps(
    'input',
    attributes
)|merge({size: size}) -%}

<input
    type="{{ type }}"
    class="{{ style('input', styleProps) }}"
    data-slot="{{ attributes.render('data-slot')|default('input') }}"
    {{ attributes.without('class') }}
/>
