{% props size = 'xs' %}

{%- set inputGroupButtonStyles = getStyleProps(
    'input.group.button',
    attributes
)|merge({size: size}) -%}

{%- set buttonContent -%}
    {%- block content -%}{%- endblock -%}
{%- endset -%}

<twig:ui:Button
        type="{{ attributes.render('type')|default('button') }}"
        variant="{{ attributes.render('variant')|default('ghost') }}"
        size="{{ size }}"
        class="{{ style('input.group.button', inputGroupButtonStyles) }}"
        {{ ...attributes.without('class').without('size').without('variant') }}
>
    {{ buttonContent }}
</twig:ui:Button>