<div class="grid w-full max-w-sm gap-4">
    <div class="grid w-full gap-3">
        <twig:ui:Label for="textarea-sm">Small</twig:ui:Label>
        <twig:ui:Textarea id="textarea-sm" size="sm" placeholder="Small textarea" />
    </div>

    <div class="grid w-full gap-3">
        <twig:ui:Label for="textarea-md">Medium (default)</twig:ui:Label>
        <twig:ui:Textarea id="textarea-md" size="md" placeholder="Medium textarea" />
    </div>

    <div class="grid w-full gap-3">
        <twig:ui:Label for="textarea-lg">Large</twig:ui:Label>
        <twig:ui:Textarea id="textarea-lg" size="lg" placeholder="Large textarea" />
    </div>
</div>
