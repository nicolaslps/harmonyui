<div class="flex items-center justify-center gap-4">
    <button
        popovertarget="custom-gap-popover"
        type="button"
        class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2"
    >
        Open
    </button>
    <button
        popovertarget="custom-gap-popover-arrow"
        type="button"
        class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2"
    >
        Open
    </button>
</div>


<twig:ui:Popover id="custom-gap-popover" data-gap="16">
    <twig:ui:Popover:Content class="w-fit p-4">
        <p class="font-medium leading-none">Default</p>
    </twig:ui:Popover:Content>
</twig:ui:Popover>



<twig:ui:Popover id="custom-gap-popover-arrow" data-gap="16">
    <twig:ui:Popover:Content class="w-fit p-4">
        <p class="font-medium leading-none">With arrow</p>
    </twig:ui:Popover:Content>
    <twig:ui:Popover:Arrow/>
</twig:ui:Popover>
