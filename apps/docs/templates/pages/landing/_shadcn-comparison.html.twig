                        </div>
                        <div class="flex items-center gap-2 text-xs text-gray-600">
                            <twig:ux:icon name="iconoir:folder-warning" class="size-4"/>
                            components/ui/form.tsx <span class="text-gray-500">(missing features)</span>
                        </div>
                        <div class="flex items-center gap-2 text-xs text-gray-600">
                            <twig:ux:icon name="iconoir:warning-triangle" class="size-4"/>
                            Manual updates required
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-primary border border-primary rounded-xl p-10">
                <div class="flex items-center space-x-4 mb-8">
                    <div class="w-12 h-12 bg-primary text-white rounded-lg flex items-center justify-center">
                        <twig:ux:icon name="lucide:settings" class="w-6 h-6" />
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-gray-900">Headless + config approach</h3>
                        <p class="text-primary italic font-semibold mt-1">The HarmonyUI way</p>
                    </div>
                </div>

                <div class="space-y-4">
                    <div class="flex items-start space-x-3">
                        <twig:ux:icon name="lucide:check" class="w-5 h-5 text-primary mt-0.5" />
