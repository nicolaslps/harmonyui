  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "{{ absolute_url(path('front_landing_index')) }}",
      "name": "HarmonyUI",
      "url": "{{ absolute_url(path('front_landing_index')) }}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ absolute_url(asset('og.png')) }}",
