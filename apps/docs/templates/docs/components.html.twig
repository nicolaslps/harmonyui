{% extends 'base.html.twig' %}

{%- block seo_title -%}
    {{- 'seo.components.title'|trans -}} {{- parent() -}}
{%- endblock -%}
{%- block seo_description -%}
    {{- 'seo.components.description'|trans -}}
{%- endblock -%}

{% block body %}
<div class="min-h-screen bg-white">
    <div class="max-w-7xl mx-auto px-6 py-12">
        <div class="mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                {{ 'components.title'|trans|capitalize }}
            </h1>
            <p class="text-lg text-gray-600 max-w-2xl">
                {{ 'components.description'|trans|capitalize }}
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {% for component in components %}
                <a href="{{ path('app_docs', {section: component.sectionSlug, page: component.pageSlug}) }}"
                   class="group block border border-gray-200 rounded-xl overflow-hidden hover:shadow-md hover:border-gray-300 transition-all duration-100">

                    <div class="aspect-video bg-gradient-to-br from-gray-50 to-gray-100 p-6 flex items-center justify-center">
                        <div class="w-12 h-12 bg-primary-100 text-primary-600 rounded-lg flex items-center justify-center">
                            <twig:ux:icon name="lucide:component" class="size-6"/>
                        </div>
                    </div>

                    <div class="p-4">
                        <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">
                            {{ component.title|trans|capitalize }}
                        </h3>
                        {% if component.description is defined %}
                            <p class="text-sm text-gray-500 mt-1 line-clamp-2">
                                {{ component.description|trans }}
                            </p>
                        {% endif %}
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
