<div class="flex flex-col gap-4">
    <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ title }}</h3>
    {%- set preview -%}
        {%- block content -%}
        {%- endblock -%}
    {%- endset -%}
    {%- set code -%}
        {%- block code -%}
        {%- endblock -%}
    {%- endset -%}
    <twig:ui:Tabs>
        <twig:ui:Tabs:List>
            <twig:ui:Tabs:Tab>Preview</twig:ui:Tabs:Tab>
            <twig:ui:Tabs:Tab>Code</twig:ui:Tabs:Tab>
        </twig:ui:Tabs:List>
        <twig:ui:Tabs:Panels>
            <twig:ui:Tabs:Panel>
                <twig:ui:Card class="px-2" data-slot="preview">
                    {{ preview }}
                </twig:ui:Card>
            </twig:ui:Tabs:Panel>
            <twig:ui:Tabs:Panel hidden>
                <twig:ui:Card class="py-0">
                    {{ code }}
                </twig:ui:Card>
            </twig:ui:Tabs:Panel>
        </twig:ui:Tabs:Panels>
    </twig:ui:Tabs>
</div>


