{% props title = 'Title', description = 'Description' %}

<article class="max-w-none font-body">
    <header class="mb-12">
        <div class="flex items-start justify-between">
            <div class="max-w-4xl">
                <h1 class="text-4xl font-bold text-gray-900 mb-6 font-display leading-tight">
                    {{ title|capitalize }}
                </h1>
                <p class="text-xl text-gray-600 leading-relaxed max-w-3xl">
                    {{ description|capitalize }}
                </p>
            </div>
        </div>
    </header>

    <div>
        {% block content %}
        {% endblock %}
    </div>
</article>
