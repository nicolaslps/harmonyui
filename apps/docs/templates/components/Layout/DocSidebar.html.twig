{% props sidebar = [] %}
<nav class="lg:sticky lg:top-8 lg:self-start">
    {% for section in sidebar %}
        <div class="mb-8">
            <h4 class="font-bold text-gray-700 mb-3 text-sm capitalize tracking-wide">
                {{ section.title|trans }}
            </h4>
            <ul class="space-y-1">
                {% for page in section.pages %}
                    <li>
                        <a href="{{ path('app_docs', {section: page.sectionSlug, page: page.pageSlug}) }}"
                           class="block px-3 py-2 text-sm rounded-md transition-colors
                                          {%- if section == page.sectionSlug and page == page.pageSlug -%}
                                              bg-gray-100 text-gray-900 font-medium
                                          {%- else -%}
                                              text-gray-600 hover:text-gray-900 hover:bg-gray-50
                                          {%- endif -%}">
                            {{ page.title|trans }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
</nav>
